  Code INTEGER,
  Name TEXT NOT NULL,
  Price INTEGER NOT NULL,
  Manufacturer INTEGER NOT NULL,
  PRIMARY KEY (Code)
);</sql><sql name="populate tables">INSERT INTO Manufacturers(Code,Name) VALUES(1,'Sony');
